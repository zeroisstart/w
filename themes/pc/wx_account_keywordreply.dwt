<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>{$_SC.site_name}</title>
<link href="{$template_path}/css/common.css" rel="stylesheet" type="text/css">
<link href="{$template_path}/css/table.css" rel="stylesheet" type="text/css">
<link href="{$template_path}/css/jquery_cbox.css" rel="stylesheet" type="text/css">
<script src="{$template_path}/script/jquery-1.8.2.min.js" type="text/javascript"></script>
<script type="text/javascript" src="{$template_path}/script/utils.min.js"></script>
<script src="{$template_path}/script/jquery.colorbox-min.js" type="text/javascript"></script>
</head>
<body>

<!--header start-->
<!-- #BeginLibraryItem "/lib/page_header.lbi" --><!-- #EndLibraryItem -->
<!--header end--> 

<!--container start-->
<div class="container-wrapper">
	<div class="container" id="main">
		<div class="containerBox">
			<div class="appTitle normalTitle2">
				<div class="vipuser">
					<div class="logo"> <img width="100" height="100" src="{$account.headimg}" onerror="this.src='{$_SC.siteurl}themes/pc/mpres/htmledition/images/default_avator.png'"> </div>
					<div id="nickname"> <strong>{$account.weixin_name}</strong></div>
					<div id="weixinid">微信号:{$account.username}</div>
				</div>
				<div class="clr"></div>
			</div>
			<div class="content">
				<div class="newTips"> <a href=""> <span id="newMsgNum">0</span>条新消息，点击查看 </a> </div>
				<div class="cLine">
					<h3 class="left" id="msg_title"> </h3>
					<div class="searchbar right"> </div>
					<div class="clr"></div>
				</div>
				<div class="cLineB">
					<h3 class="left">关键词自动回复  </h3>
					<div class="clr"></div>
				</div>
				<div style="margin:10px 0;" class="float-p"><button class="btnGrayS right" style="margin-right: 0;" id="newRule" onclick="window.location.href='wx_account.php?ac=keywordreply_add&id={$account.id}';">添加规则</button><input type="hidden" value="{$account.id}" id="wxid" /></div>
				<div class="cLine"> {if $account.autoreply_num gt 0}
					<div class="msgWrap">
						<table width="100%" cellspacing="0" cellpadding="0" border="0" class="ListProduct">
							<thead>
								<tr>
									<th>关键词</th>
									<th>匹配类型</th>
									<th>回复类型</th>
									<th>操作</th>
								</tr>
							</thead>
							<tbody>
								<tr></tr>
							{foreach from=$account.autoreply item=acc}
							<tr>
								<td> {$acc.keyword} </td>
								<td>
								{if $acc.islike eq 0}
								  完全匹配
								{/if}
								{if $acc.islike eq 1}
								  部分匹配
								{/if}
								</td>
								<td>
								 {if $acc.autoreply_type_id eq 1}
								     文本回复
								 {/if}
								 {if $acc.autoreply_type_id eq 2}
								     单图文回复
								 {/if}
								 {if $acc.autoreply_type_id eq 3}
								     多图文回复
								 {/if}
								</td>
								<td class="norightborder">&#12288;<a  class="btnGreen" href="wx_account.php?ac=keywordreply_edit&autoreply_id={$acc.id}">编辑</a>&#12288;<a class="btnGray delbutton" data-autoreply_id="{$acc.id}" href="javascript:;">删除</a></td>
							</tr>
							{/foreach}
							
									</tbody>
							
						</table>
					</div>
					{else}
					<table width="100%" cellspacing="0" cellpadding="0" border="0" class="ListProduct">
						<tbody>
							<tr>
								<td>还没有添加任何规则！</td>
							</tr>
						</tbody>
					</table>
					{/if} </div>
			</div>
            <!--sidebar start-->
            <!-- #BeginLibraryItem "/lib/wx_account_manage_sidebar.lbi" --><!-- #EndLibraryItem -->
            <!--sideerbar end-->
			<div class="clr"></div>
		</div>
	</div>
	<!--container--> 
</div>
<!--container end--> 

<!--footer start-->
<!-- #BeginLibraryItem "/lib/page_footer.lbi" --><!-- #EndLibraryItem -->
<!--footer end-->

<div style='display:none'>
	<div id='inline_content' style='padding:10px; background:#fff;'> </div>
</div>

<script>
$(function(){
  $('.delbutton').live('click',function(){
    if(confirm('是否确定要删除？')){
	  $.post('wx_account.php',{ac:'keywordreply_del',autoreply_id:$(this).attr('data-autoreply_id')},function(d){
		  if(d.err==0){
			  alert(d.errmsg);
			 window.location.href='wx_account.php?ac=keywordreply&id='+$('#wxid').val();
		  }else{
			alert('删除失败');  
		  }
		  
	  },'json');
	}
  });

});
</script>
</body>
</html>